#!/usr/bin/env bash

# Project paths
export PYTHONPATH="$PWD/src:$PYTHONPATH"
export TAROTAI_DATA_DIR="$PWD/data"
export TAROTAI_CONFIG_FILE="$PWD/config/config.yaml"

# Virtual environment
export VIRTUAL_ENV="$PWD/.venv"
export VIRTUAL_ENV_PROMPT="(tarot) "
PATH_add "$VIRTUAL_ENV/bin"

# UV configuration
export UV_INDEX_URL="https://pypi.org/simple"
export UV_CACHE_DIR=".cache/.uv_cache"
export UV_PIP_VERSION=">=23.3.2"
export UV_PYTHON=">=3.12"

# Logging
export TAROTAI_LOG_LEVEL="INFO"

# API Keys (loaded from .env if exists)
dotenv_if_exists .env

# Watch these files for changes
watch_file pyproject.toml
watch_file requirements.txt
watch_file dev-requirements.txt