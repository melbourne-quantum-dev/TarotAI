# Activate virtual environment
source .venv/bin/activate

# Set project-specific environment variables
export TAROTAI_DATA_DIR="$(pwd)/data"
export TAROTAI_CONFIG_FILE="$(pwd)/assistant_config.yml"
export TAROTAI_LOG_LEVEL="INFO"

# API keys - load from .env if exists
if [ -f .env ]; then
  source .env
fi

# Add project-specific aliases
alias tarotai="python -m tarotai"
alias pytest="python -m pytest"
alias lint="make lint"
alias test="make test"
alias format="make format"
alias clean="make clean"

# Python path configuration
export PYTHONPATH="$(pwd)/src:$(pwd)/tests:$PYTHONPATH"
